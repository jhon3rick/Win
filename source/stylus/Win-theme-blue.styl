// TITLE
$colorTitle   = #FFFF
$bgColorTitle = #2A80B9

// TBAR
$colorTbar   = #636363
$bgColorTbar = #C0DDF0

	// BOTON
	$BgBtnHover    = #86bee3
	$bordeBtnHover = #2A80B9

	// SEPARATOR
	$colorSeparator = #2A80B9

// VENTANA WIN
$wMarco = #FFF

.win-marco
	background-color $wMarco

	/.win-title
		background-color $bgColorTitle
		color $colorTitle

		/.win-title-btn
			background-image url(../img/window/close.png)
			background-size 15px

	/.win-tbar
		background-color $bgColorTbar
		color $colorTbar

		/.win-btn

			&:hover
				background-color $BgBtnHover
				border 1px solid $bordeBtnHover

			&:active
				border 1px solid #8DABD3


		/.win-separator
			color $colorSeparator