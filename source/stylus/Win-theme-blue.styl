// TITLE
$colorTitle   = #FFFF
$bgColorTitle = #2A80B9

// TBAR
$colorTbar   = #636363
$bgColorTbar = #C0DDF0

	// BOTON
	$BgBtnHover    = #86bee3
	$bordeBtnHover = #2A80B9

	// SEPARATOR
	$colorSeparator = #2A80B9

	// PANEL
	$colorTitlePanel = #0067AB

// VENTANA WIN
$wMarco = #FFF

// CALENDAR
$bgCalendar = #2A80B9
$colorCalendar = #FFF

// INPUT BUTTON
$bgInputButton    = $bgCalendar
$colorInputButton = $colorCalendar

.win-marco
	background-color $wMarco
	border 1px solid $bgColorTitle

	/.win-title
		background-color $bgColorTitle
		color $colorTitle

		/.win-title-btn
			background-image url(../img/window/close.png)
			background-size 15px

	/.win-tbar
		background-color $bgColorTbar
		color $colorTbar

		/.win-btn

			&:hover
				background-color $BgBtnHover

			&:active
				background-color $BgBtnActive

		/.win-separator
			color $colorSeparator

		/.win-separatorHeight
			border-color $colorSeparator

		/.win-panel-title, /.win-group-title
			color $colorTitlePanel

	/.win-tabpanel-head
		border-color $colorSeparator

		/.win-tab
			border-color $colorSeparator
			min-width 50px

.win-calendar, .win-calendar-year
	background $bgCalendar
	color $colorCalendar

	.calendar-change:hover
		background #DDD
		color #333

	.calendar-header:hover
		background #DDD
		color #333

	.weekDaysCell:hover
		background #DDD
		color #333
		font-weight bold

	select, input
		background $bgCalendar
		color $colorCalendar

input[type=button]
	background $bgCalendar
	color $colorCalendar

	&:hover
		background-color #DDD
		color #333


	&:active
		background-color $BgBtnActive
		color #333