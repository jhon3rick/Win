// TITLE
$colorTitle   = #636363
$bgColorTitle = #C4C4C4

// TBAR
$colorTbar   = #636363
$bgColorTbar = #F1F1F1

	// BOTON
	$BgBtnHover    = #C4C4C4
	$bordeBtnHover = #999

	// SEPARATOR
	$colorSeparator = #636363

// VENTANA WIN
$wMarco = #FFF

.win-marco
	background-color $wMarco
	border 1px solid $bgColorTitle

	/.win-title
		background-color $bgColorTitle
		color $colorTitle

		/.win-title-btn
			background-image url(../img/window/close.png)
			background-size 15px

	/.win-tbar
		background-color $bgColorTbar
		color $colorTbar

		/.win-btn

			&:hover
				background-color $BgBtnHover
				border 1px solid $bordeBtnHover

			&:active
				border 1px solid #8DABD3


		/.win-separator
			color $colorSeparator