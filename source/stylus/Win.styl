// font-size
$fSize      = 12px
$fSizeBody  = 13px
$fSizeInput = 12px
$color_min_load_ajax = #000


body
	margin 0
	padding 0
	overflow visible
	height 100%

input, select, textarea, select
	padding 5px
	font-size 14px
	box-shadow none
	border 1px solid #CCC
	transition box-shadow 0.3s, border 0.3s

input, select
	height 23px
	width auto

	&:focus
		outline none
		border solid 1px #0995F9
		box-shadow 0 0 5px 1px #BFE4FF
		background-color #F0F8FF

*
	font-size $fSize
	box-sizing border-box
	font-family arial,sans-serif

table td
	border-collapse collapse

input[type=button]
	padding 3px 10px
	height 30px
	border 0px

.win-modal
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background rgba(56, 56, 56, 0.5)
	overflow hidden

	> div
		position relative
		-webkit-user-select none
		-moz-user-select none
		-o-user-select none
		-ms-user-select none
		-khtml-user-select none
		user-select none

		&:hover .win-div-resize
			visibility visible

.win-title
	width 100%
	height 27px
	color #fff
	font-size 12px
	overflow hidden
	text-align center

	> div
		padding 6px

	/.win-title-txt
		width 100%
		float left
		overflow hidden
		white-space nowrap
		text-overflow ellipsis

	/.win-title-btn
		font-family sans-serif
		font-size 20px
		text-align center
		height 100%
		width 25px
		float right
		cursor pointer
		overflow hidden
		line-height 17px
		margin-left -27px
		background-repeat no-repeat
		background-position center

		&:hover
			background-color #AB0000

		&:active
			background-color #900000

.win-window-body
	float left
	width 100%
	padding 5px
	height calc(100% - 3px - 106px)
	overflow auto
	font-size $fSizeBody

.alert
	height calc(100% - 60px)

.alert .content-btn
		position absolute
		bottom 5px
		text-align center
		width 100%

.win-div-resize
	width 16px
	height 16px
	background-image url(../img/increase.png)
	position absolute
	right 0
	bottom 0
	cursor se-resize
	visibility hidden

.win-tbar
	overflow hidden
	display table
	width 100%
	padding 0

	> div
		display table-cell
		vertical-align middle

	/.win-btn
		padding 1px 5px
		background-color rgba(0,0,0,0)
		min-height 56px
		min-width 65px
		width 65px
		cursor pointer

		> button
			background-color rgba(0,0,0,0)
			background-size 30px
			background-repeat no-repeat
			background-position center top
			min-height 56px
			min-width 50
			cursor pointer
			padding-top 35px
			font-size 11px
			border 1px solid transparent
			text-decoration none
			outline none

	/.win-separator
		width 1px
		letter-spacing -1px
		transform scale(1 ,2)

	/.win-separatorHeight
		width 1px
		border-right 1px solid

	/.win-tbtext
		padding 5px
		height 60px

	/.win-panel
		padding 5px 10px

.win-input-number
	text-align right

.win-modal-parent
	width 100%
	height 100%
	background rgba(56, 56, 56, 0.8)
	overflow hidden
	position absolute
	display table
	visibility hidden

.win-modal-content
	display         table-cell
	vertical-align  middle
	width           100%
	height          100%

.win-modal-label
	position     relative
	margin       -10px 0 0 0
	text-align   center
	font-size    20px
	color        #FFF
	font-weight  bold
	font-family  Arial, Helvetica, sans-serif

.win-modal-img-finish
	width       100%
	text-align  center
	padding-top  20px

.label-finish
	margin    0
	font-size 14px

.win-content-min-load, .win-content-min-load > div
	float	left

.win-content-min-load-label
	line-height  1.5
	padding-left 5px

.win-min-load-ajax
	width              18px
	height             18px
	clear              both
	float 			   left
	border             4px rgba( $color_min_load_ajax ,0.25) solid
	border-top         4px rgba( $color_min_load_ajax ,1) solid
	border-radius      50%
	animation          win-min-load-ajax .6s infinite linear

@keyframes win-min-load-ajax {
	from { transform: rotate(0deg); }
	to { transform: rotate(359deg); }
}

// CALENDAR
.win-calendar-parent
	max-width 200px
	overflow hidden

	.calendar-change
		font-weight bold
		font-size 15px
		cursor hand

	// SELECT FECHA
	/.win-calendar
		clear both
		width 180px
		text-align center

		.calendar-header
			font-weight bold
			font-size 13px

		td
			padding 5px

		.weekDaysCell, .calendar-month, .calendar-header
			cursor hand

	// SELECT YEAR
	/.win-calendar-year
		clear both
		width 180px
		max-width 200px
		text-align center

		.content-month
			overflow hidden
			padding 0 5px
			border-right 1px solid #fff

			> div
				overflow hidden
				padding 0
				width 100%
				display table
				text-align left


				> div
					text-align left
					height 25px
					display table-cell
					vertical-align middle
					width 50%

		.content-year
			padding 0

			> div
				width 50%
				height 20px
				padding 2px


		td
			padding 3px 5px

		select
			box-shadow none
			overflow hidden
			border none
			padding 0 0 2px 0


			:focus
				box-shadow none

			option
				font-size 11px

		input
			height 25px

