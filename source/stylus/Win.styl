// font-size
$fSize      = 12px
$fSizeBody  = 13px
$fSizeInput = 12px

body
	margin 0
	padding 0
	overflow visible
	height 100%

input, select, textarea, select
	padding 5px
	font-size 14px
	box-shadow none
	border 1px solid #CCC
	transition box-shadow 0.3s, border 0.3s

input, select
	height 23px

	&:focus
		outline none
		border solid 1px #0995F9
		box-shadow 0 0 5px 1px #BFE4FF

*
	font-size $fSize
	box-sizing border-box
	font-family arial,sans-serif

.win-modal
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background rgba(56, 56, 56, 0.5)
	overflow hidden

	> div
		position relative
		-webkit-user-select none
		-moz-user-select none
		-o-user-select none
		-ms-user-select none
		-khtml-user-select none
		user-select none

		&:hover .win-div-resize
			visibility visible

.win-title
	width 100%
	height 27px
	color #fff
	font-size 12px
	overflow hidden
	text-align center

	> div
		padding 6px

	/.win-title-txt
		width 100%
		float left
		overflow hidden
		white-space nowrap
		text-overflow ellipsis

	/.win-title-btn
		font-family sans-serif
		font-size 20px
		text-align center
		height 100%
		width 25px
		float right
		cursor pointer
		overflow hidden
		padding 0
		line-height 17px
		margin-left -27px
		background-repeat no-repeat
		background-position center

		&:hover
			color #f00
			background-color #AB0000

.win-window-body
	float left
	width 100%
	padding 5px
	height calc(100% - 3px - 106px)
	overflow auto
	font-size $fSizeBody

.win-div-resize
	width 16px
	height 16px
	background-image url(../img/increase.png)
	position absolute
	right 0
	bottom 0
	cursor se-resize
	visibility hidden

.win-tbar
	overflow hidden
	display table
	width 100%
	padding 3px

	// > div
	// 	margin 7px 0

	/.win-btn
		background-color rgba(0,0,0,0)
		min-height 56px
		min-width 50
		cursor pointer
		font-size 11px
		float left
		padding 1px
		border 1px solid transparent

		> button
			background-color rgba(0,0,0,0)
			// background-image url("../img/guardar.png")
			background-size 30px
			background-repeat no-repeat
			background-position center top
			min-height 56px
			min-width 50
			cursor pointer
			padding-top 35px
			font-size 11px
			border 1px solid transparent
			text-decoration none
			outline none

	/.win-separator
		display table
		float left
		height 60px

		> div
			height 40px
			display table-cell
			vertical-align middle
			letter-spacing -1px
			transform scale(1 ,2)
			// font-size 30px

	/.win-tbtext
		float left
		height 60px
		padding 2px 7px
		display table

		> div
			display table-cell
			vertical-align middle

.win-input-number
	text-align right

.widge-right
	float right
	text-align right

.win-modal-parent
	width 100%
	height 100%
	background rgba(56, 56, 56, 0.5)
	overflow hidden
	position absolute
	display table
	visibility hidden

.win-modal-content
	display         table-cell
	vertical-align  middle
	width           100%
	height          100%

.win-modal-label
	position     relative
	margin       -10px 0 0 0
	text-align   center
	font-size    20px
	color        #FFF
	font-weight  bold
	font-family  Arial, Helvetica, sans-serif