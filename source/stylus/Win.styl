// font-size
$fSize      = 12px
$fSizeBody  = 11px
$fSizeInput = 12px
$color_min_load_ajax = #000

body, html
	margin 0
	padding 0
	overflow visible
	height 100%

input, textarea
	padding 2px 5px

select
	padding 2px

input, select, textarea, select
	font-size 12px
	box-shadow none
	border 1px solid #CCC
	transition box-shadow 0.3s, border 0.3s

input, select
	height 23px
	width auto

	&:focus
		outline none
		border solid 1px #0995F9
		box-shadow 0 0 5px 1px #BFE4FF
		background-color #F0F8FF

*
	box-sizing border-box
	font normal 11px tahoma,arial,helvetica,sans-serif

nav
	overflow hidden

table td
	border-collapse collapse

input[type=button]
	padding 3px 10px
	height 30px
	border 0px

.win-modal
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background rgba(56, 56, 56, 0.5)
	overflow hidden

	> div,
	section
		width 100%
		overflow hidden
		position absolute
		-webkit-user-select none
		-moz-user-select none
		-o-user-select none
		-ms-user-select none
		-khtml-user-select none
		user-select none

		&:hover .win-div-resize
			visibility visible

	.win-file-resize
		background-color transparent
		position absolute


	div[data-resize="left"], div[data-resize="right"]
		cursor e-resize
		height 100%
		width 5px

	div[data-resize="top"], div[data-resize="bottom"]
		cursor n-resize
		height 5px
		width 100%

	div[data-resize="top"]
		top 0

	div[data-resize="left"]
		left 0

	div[data-resize="right"]
		left 100%

	div[data-resize="bottom"]
		top 100%

.win-title
	width 100%
	height 27px
	color #fff
	font-size 12px
	overflow hidden
	text-align center
	cursor move

	> div
		padding 6px

	/.win-title-txt
		width 100%
		float left
		overflow hidden
		white-space nowrap
		text-overflow ellipsis
		font 14px arial,verdana


	/.win-title-btn
		height 100%
		width 25px
		float right
		cursor pointer
		overflow hidden
		margin-left -27px
		background-image url(../img/icons/close.png)
		background-size 18px
		background-repeat no-repeat
		background-position center

		&:hover
			background-color #AB0000

		&:active
			background-color #900000

.win-body
	float left
	width 100%
	height 100%
	overflow auto
	font-size $fSizeBody

.alert
	height calc(100% - 60px)

.alert .content-btn
		position absolute
		bottom 5px
		text-align center
		width 100%

.win-div-resize
	width 16px
	height 16px
	background-image url(../img/icons/increase.png)
	position absolute
	right 0
	bottom 0
	cursor se-resize
	visibility hidden

.win-ctxmenu
	overflow visible
	position fixed
	z-index 1000
	margin 0 !important
	padding 0 !important
	height auto !important
	min-width 150px
	min-height 20px
	color #000

	box-shadow 2px 2px 3px #A29B9B
	border-top 1px solid #CCC
	border-left 1px solid #CCC
	background-color #F1F1F1
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none

	> div
		padding 6px 8px
		cursor pointer
		text-align left
		border-bottom 1px solid #ccc

		&:hover
			background-color #ABDDFB

		&:last-child
			border none

.win-tbar
	overflow hidden
	display table
	margin 2px 0

	> div
		display table-cell

	/.win-btn
		padding 2px
		vertical-align top
		background-color rgba(0,0,0,0)
		min-height 50px
		min-width 50px
		cursor pointer

		&[data-state="disable"]
			background-color #A9A9A9
			opacity 0.5

		> button
			width 100%
			background-color rgba(0,0,0,0)
			background-size 24px
			background-repeat no-repeat
			background-position center top
			min-height 40px
			min-width 40px
			cursor pointer
			padding 26px 0 0 0
			font-size 11px
			border 1px solid transparent
			text-decoration none
			outline none

	/.win-separator
		width 1px
		vertical-align middle
		letter-spacing -1px
		transform scale(1 ,2)

	/.win-separatorHeight
		width 1px
		border-right 1px solid

	/.win-tbtext
		vertical-align middle
		padding 5px

	/.win-panel
		vertical-align top

		> div
			overflow auto

	/.win-buttongroup
		vertical-align top

		/.win-buttongroup-body
			display table

			> div
				display table-cell

		/.win-buttongroup-title,
		/.win-panel-title
			text-align center
			padding 3px 0

	/.win-tabpanel
		width 100%
		overflow hidden
		padding 0 0 5px 3px

		/.win-tab
			float left
			height calc(100% - 5px)
			padding 5px 10px
			margin 5px 5px 0 0
			min-width 50px
			cursor pointer

		/.win-tab-body[data-selected=false]
			display none

		/.win-tab-body[data-selected=true]
			display block

.win-input-number
	text-align right

.win-input-uppercase
	text-transform uppercase

.win-input-lowercase
	text-transform lowercase

.win-modal-parent
	height 100%
	display table

.win-modal-content
	width 100%
	height 100%
	display table-cell
	vertical-align middle

.win-notify-ribete
	padding 5px
	position relative
	background-color #FFF

.win-notify-icon
	width 100px
	height 100px
	margin 10px auto
	background-size 100%
	background-repeat no-repeat
	background-position center

	&[data-icon="loading"]
		background-image url(../img/notify/loading.gif)

	&[data-icon="warning"]
		background-image url(../img/notify/warning.png)

	&[data-icon="success"]
		background-image url(../img/notify/success.png)

	&[data-icon="fail"]
		background-image url(../img/notify/fail.png)

.win-notify-label
	color #333
	margin 10px
	position relative
	font-size 20px
	text-align center
	font-weight  bold

.win-modal-img-finish
	width 100%
	text-align center
	padding-top 20px

.label-finish
	margin 0
	font-size 14px

.win-content-min-load, .win-content-min-load > div
	float	left

.win-content-min-load-label
	line-height  1.5
	padding-left 5px

.win-min-load-ajax
	width 18px
	height 18px
	clear both
	float left
	border 4px rgba( $color_min_load_ajax ,0.25) solid
	animation win-min-load-ajax .6s infinite linear
	border-top 4px rgba( $color_min_load_ajax ,1) solid
	border-radius 50%

@keyframes win-min-load-ajax {
	from { transform: rotate(0deg); }
	to { transform: rotate(359deg); }
}

// CALENDAR
.win-calendar-parent
	max-width 200px
	overflow hidden
	z-index 8000
	position fixed

	.win-calendar
		background-color #FFF
		color #000
		// border 1px solid #CCC

	.calendar-controls
		color          #fff
		font-size      1.2em
		text-transform uppercase
		padding        2em 0 0 0
		text-align     center
		background     #000
		height         30px

	.calendar-change
		// font-weight bold
		font-size 15px
		cursor pointer
		background-repeat no-repeat
		background-position center

	.previous
		background-image url(../img/icons/previous_arrow_calendar.png)
	.next
		background-image url(../img/icons/next_arrow_calendar.png)

	// SELECT FECHA
	/.win-calendar
		clear both
		width 180px
		text-align center

		.calendar-header
			// font-weight bold
			font-size 13px

		td > a
			width 24px
			height 24px
			padding 5px
			display table-cell

		.weekDaysCell, .calendar-month, .calendar-header
			cursor pointer

	// SELECT YEAR
	/.win-calendar-year
		clear both
		width 180px
		max-width 200px
		text-align center
		background-color #FFF

		input[type=button]
			background-color #000
			color #FFF

		input[type=button]:hover
			background-color #575757
			color #FFF


		.content-month
			width 50%
			padding 0 5px
			overflow hidden
			border-right 1px solid #fff

			> div
				overflow hidden
				padding 0
				width 100%
				display table
				text-align left

				> div
					text-align center
					height 25px
					display table-cell
					vertical-align middle
					width 50%

				>div:hover
					background-color  #ADADAD
					color #000

		.content-year
			padding 0

			> div
				width 50%
				height 20px
				padding 2px

		td
			padding 3px 5px
			cursor  pointer

		td[data-year="false"]:hover
			background-color  #ADADAD
			color #000

		select
			box-shadow none
			overflow hidden
			border none
			padding 0 0 2px 0

			:focus
				box-shadow none

			option
				font-size 11px

		input
			height 25px

	.calendar-controls td:hover /*.calendar-header:hover, .win-calendar-year .calendar-header:hover*/
		background-color #575757
		// color      #333

	.calendar-controls
		border 1px solid #000

	.content-year div:hover
		background-color  #ADADAD

	.win-calendar-year:first-child
		border-top 1px solid #CCC

	.weekDaysRow, .weekDaysTitleRow, .win-calendar-year
		border-right 1px solid #CCC
		border-left 1px solid #CCC

	.weekDaysRow td:hover
		background-color #BDBDBD


