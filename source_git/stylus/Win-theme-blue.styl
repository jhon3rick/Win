// TITLE
$colorTitle   = #FFFF
$bgColorTitle = #2A80B9

// TBAR
$colorTbar   = #333
$bgColorTbar = #FFF

	// BOTON
	$bgBtnHover    = #BAD8EC
	$bordeBtnHover = #2A80B9
	$bordeBtnActive = #2A80B9

	// SEPARATOR
	$colorSeparator = #888

	// PANEL
	$colorTitlePanel = #333

	// TABPANEL
	// $bgColorTabPanel = #D2E6F5
	$colorTabPanel = #FFF
	$bgColorTabPanel = $bgColorTitle

// VENTANA WIN
$wMarco = #FFF

// CALENDAR
$bgCalendar = #2A80B9
$colorCalendar = #FFF

// INPUT BUTTON
$bgInputButton    = $bgCalendar
$colorInputButton = $colorCalendar

.win-marco
	background-color $wMarco
	border 1px solid $bgColorTitle

	/.win-title
		background-color $bgColorTitle
		color $colorTitle

	/.win-tbar
		background-color $bgColorTbar
		border-bottom 1px solid #888
		width calc(100% - 10px)
		margin 0 5px

		div,
		button
			color $colorTbar

		/.win-btn
			color #FFF

			&:hover
				background-color $bgBtnHover

			&:active
				background-color $bgBtnActive

		/.win-separator
			color $colorSeparator

		/.win-separatorHeight
			border-color $colorSeparator

		/.win-panel-title, /.win-group-title
			color $colorTitlePanel

		/.grilla_title_label:hover
			background-color #DDD

	/.win-tabpanel
		background-color $bgColorTabPanel

		/.win-tab
			background-color $bgColorTitle
			color $colorTabPanel
			border 2px solid transparent
			border-bottom-color #FFF

			&[data-selected=true]
				color $colorTbar
				background-color #FFF !important

			&[data-selected=false]
				background-color $bgColorTitle

			&[data-state=disable]
				color #afafaf
				cursor	default
				border-bottom-color transparent

